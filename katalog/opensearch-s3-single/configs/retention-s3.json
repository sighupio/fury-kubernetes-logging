{
  "policy": {
    "description": "Delete INDEXNAME indexes after DELETE_MIN_AGE days and store snapshots after SNAPSHOT_MIN_AGE days of the indexes in an S3 repository using AWS access and secret keys from OpenSearch keystore.",
    "default_state": "hot",
    "schema_version": 1,
    "states": [
      {
        "name": "hot",
        "actions": [],
        "transitions": [
          {
            "state_name": "snapshot",
            "conditions": {
              "min_index_age": "SNAPSHOT_MIN_AGEd"
            }
          }
        ]
      },
      {
        "name": "snapshot",
        "actions": [
          {
            "retry": {
              "count": 3,
              "backoff": "exponential",
              "delay": "2m"
            },
            "snapshot": {
              "repository": "REPOSITORYNAME",
              "snapshot": "INDEXNAME-$(date +%Y-%m-%d-%H-%M-%S)"
            }
          }
        ],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "DELETE_MIN_AGEd"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "retry": {
              "count": 3,
              "backoff": "exponential",
              "delay": "2m"
            },
            "delete": {}
          }
        ],
        "transitions": []
      }
    ],
    "ism_template": [
      {
        "index_patterns": [
          "INDEXNAME-*"
        ],
        "priority": 1
      }
    ]
  }
}
